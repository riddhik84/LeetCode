class Solution {
    public boolean isPalindrome(String s) {
        if(s == null)
            return false;
        
        //to lowercase
        s = s.toLowerCase();
        
        for(int i = 0, j = s.length() - 1; i < j; ){
            char ch1 = s.charAt(i);            
            if(!Character.isLetterOrDigit(ch1)){
                i++;
                continue;
            }
            
            char ch2 = s.charAt(j);
            if(!Character.isLetterOrDigit(ch2)){
                j--;
                continue;
            }
            
            if(ch1 != ch2){
                return false;
            } else {
                i++;
                j--;
            }
        }
        
        return true;
    }
}
